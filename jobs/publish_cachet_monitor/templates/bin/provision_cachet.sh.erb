#!/bin/sh
curl -X POST -H "Content-Type: application/json;" -H "X-Cachet-Token: <%= p("cachet.api_token") %>"  <%= p("cachet.api_url") %>/components -k \
-d @- << EOF

{
    "name": "component name",
    "description": "description",
    "status": 1,
    "enabled": true
}
EOF


#create metrics
curl -X POST -H "Content-Type: application/json;" -H "X-Cachet-Token: <%= p("cachet.api_token") %>"  <%= p("cachet.api_url") %>/metrics -k \
-d @- << EOF

{
    "name": "name",
    "suffix": "suffix",
    "description": "desc",
    "default_value": 0
}
EOF

